<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input
              type="text"
              name="nom"
              value="<%= data.nom%>"
              placeholder="Nom"
              class="form-control"
              autofocus
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="age"
              value="<%= data.age%>"
              placeholder="Age"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="famille"
              value="<%= data.famille%>"
              placeholder="Famille"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="race"
              value="<%= data.race%>"
              placeholder="Race"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="nouriture"
              value="<%= data.nouriture%>"
              placeholder="Nouriture"
              class="form-control"
            />
          </div>
          <button type="submit" class="btn btn-primary">Modifier</button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
